<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_posting_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Food Posting First Image -->
        <ImageView
            android:id="@+id/food_posting_preview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="beep"
            android:scaleType="fitCenter"
            android:src="@drawable/common_google_signin_btn_icon_dark" />

        <!-- Title -->
        <TextView
            android:id="@+id/food_posting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/food_posting_preview"
            android:layout_toRightOf="@+id/food_posting_preview"
            android:text="@string/posting_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <!-- Price -->
        <TextView
            android:id="@+id/food_posting_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/food_posting_title"
            android:layout_alignStart="@+id/food_posting_title"
            android:layout_below="@+id/food_posting_title"
            android:text="$23.32"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    </RelativeLayout>
</android.support.v7.widget.CardView>